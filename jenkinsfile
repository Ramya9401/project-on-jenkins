pipeline{
    agent any
    stages{
        stage('build')
        {
            steps{
                git 'https://github.com/Ramya9401/project-on-jenkins.git'
                
                sh 'mvn clean install'
            }
        }
        stage('build docker image')
        {
            steps{
                script{
                sh 'docker build -t mummadiramya/mav-project:latest .'
                }
            }
            
        }
        stage('docker build')
        {
            steps{
            withCredentials([usernameColonPassword(credentialsId: 'dockerHub', variable: 'dockerhub')]) {
                sh 'sudo docker login -u ${env.variable} -p ${env.variable}'
                sh 'sudo docker push mummadiramya/mav-project:latest'
                }
            }
        }
    }
}
