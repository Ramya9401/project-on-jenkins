pipeline{
    agent any
    stages{
        stage('build')
        {
            steps{
                git 'https://github.com/Ramya9401/project-on-jenkins.git'
                
                sh 'mvn clean install'
            }
        }
        stage('build docker image')
        {
            steps{
                script{
                sh 'sudo docker build -tty mummadiramya/mav-project:latest .'
                }
            }
            
        }
        stage('docker build')
        {
            steps{
                withCredentials([usernameColonPassword(credentialsId: 'dockerHub', variable: 'dockerHubUser')]) {
    
                sh "sudo docker login -u ${env.dockerHubUser} -p ${env.dockerHubPassword}"
                sh 'sudo docker push mummadiramya/mav-project:latest'
                }
            }
        }
    }
}
