pipeline{
    agent any
    environment {
    DOCKERHUB_CREDENTIALS = credentials('dockerHub')
  }
    stages{
        stage('build')
        {
            steps{
                git 'https://github.com/Ramya9401/project-on-jenkins.git'
                
                sh 'mvn clean install'
            }
        }
        stage('Login') {
      steps {
        sh 'sudo docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin | echo $DOCKERHUB_CREDENTIALS_PSW |'
      }
    }
        stage('build docker image')
        {
            steps{
                script{
                sh 'sudo docker build  -t mummadiramya/mav-project:latest .'
                
                }
            }
            
        }
        stage('docker build')
        {
            steps{
                sh 'sudo docker push mummadiramya/mav-project:latest'
                
            }
        }
    }
}
