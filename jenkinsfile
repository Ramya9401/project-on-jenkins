pipeline{
    agent any
    environment {
    DOCKERHUB_CREDENTIALS = credentials('dockerHub')
  }
    stages{
        stage('build')
        {
            steps{
                git 'https://github.com/Ramya9401/project-on-jenkins.git'
                
                sh 'mvn clean install'
            }
        }
        stage('Login') {
      steps {
        sh 'docker login -u mummadiramya |echo "$DOCKERHUB_CREDENTIALS_PSW"' 
      }
    }
        stage('build docker image')
        {
            steps{
                script{
                sh 'sudo docker build -t mummadiramya/test:1 .'
                
                }
            }
            
        }
        stage('docker logout')
        {
            steps{
                sh 'sudo docker logout'
            }
        }
        stage('login again')
        {
            steps{
                sh 'sudo docker login -u mummadiramya | echo "$DOCKERHUB_CREDENTIALS_PSW"'
            }   
        }
        
        stage('docker build')
        {
            steps{
                sh 'sudo docker push mummadiramya/test:1 | echo "password"'
                
            }
        }
    }
}

